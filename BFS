#include "Graph.h"
#include <queue>
#include <iostream>
#include <vector>
#include <utility>
using namespace std;
void BFS(Graph& g, int startNode) { // Nên dùng tham chiếu &g để tránh copy đồ thị
    auto adj = g.getAdjList();
    int n = (int)g.getAdjList().size();

    if (startNode < 0 || startNode >= n) return;

    vector<bool> visited(n, false);
    queue<int> q;

    visited[startNode] = true;
    q.push(startNode);

    cout << "BFS starting from node " << startNode << ": ";
    while (!q.empty()) {
        int u = q.front();
        q.pop();
        cout << u << " ";

        for (auto& edge : adj[u]) { // Dùng tham chiếu & để tránh copy pair
            int v = edge.first;
            if (!visited[v]) {
                visited[v] = true;
                q.push(v);
            }
        }
    }
    cout << endl;
}
