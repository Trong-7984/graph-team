#include <fstream>
#include <vector>
#include "graph.h"

void saveGraph(const std::string& filename,
               const std::vector<std::vector<int>>& adjList) {
    std::ofstream out(filename);
    if (!out.is_open()) return;

    int n = adjList.size();
    out << n << "\n";

    for (int i = 0; i < n; i++) {
        out << adjList[i].size();
        for (int v : adjList[i]) {
            out << " " << v;
        }
        out << "\n";
    }

    out.close();
}
