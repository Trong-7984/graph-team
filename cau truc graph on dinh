#ifndef GRAPH_H
#define GRAPH_H

#include <vector>
#include <utility>

using namespace std;

class Graph {
private:
    int n;   // số đỉnh
    bool directed;  // đồ thị có hướng hay không
    vector<vector<pair<int,int>>> adj; // danh sách kề (đỉnh, trọng số)

public:
    // Khởi tạo đồ thị
    Graph(int n = 0, bool directed = false) {
        this->n = n;
        this->directed = directed;
        adj.resize(n);
    }

    // Thêm cạnh
    void addEdge(int u, int v, int w = 1) {
        adj[u].push_back({v, w});
        if (!directed) {
            adj[v].push_back({u, w});
        }
    }

    // Getter
    int getNumVertices() const {
        return n;
    }

    bool isDirected() const {
        return directed;
    }

    const vector<vector<pair<int,int>>>& getAdjList() const {
        return adj;
    }
};

#endif

