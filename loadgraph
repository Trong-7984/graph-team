#include <fstream>
#include <vector>
#include "graph.h"

std::vector<std::vector<int>> loadGraph(const std::string& filename) {
    std::ifstream in(filename);
    std::vector<std::vector<int>> adjList;

    if (!in.is_open()) return adjList;

    int n;
    in >> n;
    adjList.resize(n);

    for (int i = 0; i < n; i++) {
        int k;
        in >> k;
        adjList[i].resize(k);
        for (int j = 0; j < k; j++) {
            in >> adjList[i][j];
        }
    }

    in.close();
    return adjList;
}
